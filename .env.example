# React 19 Modern Client - Environment Variables

# Application Information
REACT_APP_NAME=React19_Modern_Client
REACT_APP_VERSION=2.0.0

# Development Settings
NODE_ENV=development
REACT_APP_DEBUG_MODE=true
FAST_REFRESH=true

# Performance Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_PERFORMANCE_LOG_LEVEL=debug

# Build Optimizations
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true
DISABLE_ESLINT_PLUGIN=false

# Feature Flags
REACT_APP_ENABLE_TYPESCRIPT=true
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_WEB_VITALS=true

# API Configuration (uncomment if needed)
# REACT_APP_API_URL=http://localhost:8000/api
# REACT_APP_API_TIMEOUT=10000

# Theme and UI
REACT_APP_DEFAULT_THEME=modern
REACT_APP_ENABLE_DARK_MODE=true

# Development Tools
REACT_APP_SHOW_DEV_TOOLS=true

# Bundle Analysis
ANALYZE=false

# Hot Reloading
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000
WDS_SOCKET_PATH=/ws
